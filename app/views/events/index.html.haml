.row
  .small-12.large-6.columns
    %h1 Course Calendar
  .small-12.large-6.columns
    - if can?(:create, Event)
      = link_to "Add New Event", new_course_event_path(current_course), class: "button right"

- (current_course.start_date.change(day: 1)..current_course.end_date).select{ |d| d.day == 1 }.each do |first_of_month|
  = calendar(year: first_of_month.year, month: first_of_month.month){ |d| format_calendar_date(d, current_course) }

