%h1= user.name
%p= user.phone
%p= user.email
- if current_user.instructor?
  - if current_user != user
    %p= user.goals
  - if !user.instructor?
    = button_to "Make Instructor", instructify_user_path(user)

- if user == current_user
  %p= user.goals
  %p= link_to "Edit My Profile", [:edit, current_user]
