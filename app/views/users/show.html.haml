.row
  .small-2.columns
    =link_to(image_tag(user.photo, class: "user_profile_photo"), user_path)
  .small-2.columns
    .row
      %h1= user.name
    .row
      %p= user.phone
    .row
      %p= user.email
  .small-8.columns
.row
  - if current_user == user or current_user.instructor?
    %p= user.goals
    %p= user.background
  - if current_user.instructor? and !user.instructor?
    = button_to "Make Instructor", instructify_user_path(user)
  - if user == current_user
    %p= link_to "Edit My Profile", [:edit, current_user]
